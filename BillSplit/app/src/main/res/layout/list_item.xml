<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pekkles="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <pekkles.billsplit.widget.CustomTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        pekkles:text_size_primary="@dimen/text_size_main"/>
    <pekkles.billsplit.widget.CustomTextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <pekkles.billsplit.widget.CustomTextView
        android:id="@+id/tax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <pekkles.billsplit.widget.CustomTextView
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <pekkles.billsplit.widget.CustomTextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>